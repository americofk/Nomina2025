<!-- Modal de detalles de auditoría -->
<div class="modal fade modal-AuditLogDetails" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" style="width: 800px; max-width: 95%;">
        <div class="modal-content">
            <!-- Header del modal -->
            <div class="modal-header" style="background-color: #337ab7; padding: 10px 15px; display: flex; justify-content: space-between; align-items: center;">
                <h4 class="modal-title" style="color: #fff; font-size: 16px; font-weight: bold; margin: 0;">
                    <i class="fa fa-info-circle"></i> Detalles del Registro de Auditoría
                </h4>
                <button type="button" class="close close-modal-auditlog-details" style="color: #fff; opacity: 1; font-size: 24px; margin: 0; padding: 0;">
                    <span>&times;</span>
                </button>
            </div>

            <!-- Contenido del modal -->
            <div class="modal-body" style="padding: 15px 20px;">
                <div class="row" style="display: flex; flex-wrap: wrap;">
                    <!-- Columna 1 -->
                    <div class="col-md-6" style="flex: 1; min-width: 300px; padding: 10px;">
                        <div class="form-group" style="margin-bottom: 15px;">
                            <label style="font-weight: bold; color: #555;">RecId:</label>
                            <input type="text" id="audit-detail-recid" class="form-control" readonly style="background-color: #f5f5f5;" />
                        </div>
                        <div class="form-group" style="margin-bottom: 15px;">
                            <label style="font-weight: bold; color: #555;">Entidad:</label>
                            <input type="text" id="audit-detail-entityname" class="form-control" readonly style="background-color: #f5f5f5;" />
                        </div>
                        <div class="form-group" style="margin-bottom: 15px;">
                            <label style="font-weight: bold; color: #555;">Campo:</label>
                            <input type="text" id="audit-detail-fieldname" class="form-control" readonly style="background-color: #f5f5f5;" />
                        </div>
                        <div class="form-group" style="margin-bottom: 15px;">
                            <label style="font-weight: bold; color: #555;">Modificado Por:</label>
                            <input type="text" id="audit-detail-changedby" class="form-control" readonly style="background-color: #f5f5f5;" />
                        </div>
                        <div class="form-group" style="margin-bottom: 0;">
                            <label style="font-weight: bold; color: #555;">Fecha de Cambio:</label>
                            <input type="text" id="audit-detail-changedat" class="form-control" readonly style="background-color: #f5f5f5;" />
                        </div>
                    </div>
                    <!-- Columna 2 -->
                    <div class="col-md-6" style="flex: 1; min-width: 300px; padding: 10px;">
                        <div class="form-group" style="margin-bottom: 15px;">
                            <label style="font-weight: bold; color: #555;">DataAreaId:</label>
                            <input type="text" id="audit-detail-dataareaid" class="form-control" readonly style="background-color: #f5f5f5;" />
                        </div>
                        <div class="form-group" style="margin-bottom: 15px;">
                            <label style="font-weight: bold; color: #555;">Ref. Entidad (RecId):</label>
                            <input type="text" id="audit-detail-entityrefrecid" class="form-control" readonly style="background-color: #f5f5f5;" />
                        </div>
                        <div class="form-group" style="margin-bottom: 15px;">
                            <label style="font-weight: bold; color: #555;">Valor Anterior:</label>
                            <textarea id="audit-detail-oldvalue" class="form-control" rows="3" readonly style="background-color: #f5f5f5; resize: none;"></textarea>
                        </div>
                        <div class="form-group" style="margin-bottom: 0;">
                            <label style="font-weight: bold; color: #555;">Nuevo Valor:</label>
                            <textarea id="audit-detail-newvalue" class="form-control" rows="3" readonly style="background-color: #f5f5f5; resize: none;"></textarea>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .modal-AuditLogDetails .modal-dialog {
        margin: 50px auto;
    }
    .modal-AuditLogDetails .modal-content {
        min-height: auto;
    }
</style>
