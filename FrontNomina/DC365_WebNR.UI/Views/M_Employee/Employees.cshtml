@model IEnumerable<DC365_WebNR.CORE.Domain.Models.Employee>
@using System.Globalization;
@{
    ViewData["Title"] = "Employees";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string version = $"dt={DateTime.Now.ToString("yyyyMMddhhmmss")}";
    var token = ViewBag.Token ?? "";
    var userRecId = ViewBag.UserRecId ?? 0;
    var dataAreaId = ViewBag.DataAreaId ?? "";
    // Determinar entidad para el sistema de vistas según el tipo de empleado
    string viewsEntity = "Employee";
    if (ViewBag.typeEmployee == "Prospectos a empleado") viewsEntity = "EmployeeProspect";
    else if (ViewBag.typeEmployee == "Dados de baja") viewsEntity = "EmployeeDismissed";
}

<link href="~/css/Employees.css" rel="stylesheet" />
<link href="~/css/Department.css" rel="stylesheet" />
<link href="~/css/Helps/Helps.css" rel="stylesheet" />
<link href="~/css/AppInputDate.css" rel="stylesheet" />

<div class="contDasboard" id="employee-page" data-token="@token" data-user="@userRecId" data-dataarea="@dataAreaId" data-entity="@viewsEntity" data-employee-type="@ViewBag.typeEmployee">
    <input type="hidden" class="idemployee-process-payrol" value="@ViewBag.idemployee" />
    @*Opciones del Formulario*@
    <div class="opcioneslistpage">
        <div class="menuoptions-flex">
            <ul class="menuoptions">
                @{
                    switch (ViewBag.typeEmployee)
                    {
                        case "Empleados":
                            <li class="EditEmployee">
                                <a class="btn2 btn-app">
                                    <i class="fa fa-edit "></i>
                                    Editar
                                </a>
                            </li>

                            <li class="li-separador">
                                <a class="btn2 btn-app">
                                </a>
                            </li>
                            <li class="Employee-Disabled">
                                <a class="btn2 btn-app">
                                    <i class="fa fa-user"></i>
                                    Empleados inactivos
                                </a>
                            </li>

                            <li class="employee-history">
                                <a class="btn2 btn-app">
                                    <i class="fa fa-user"></i>
                                    Historial del empleado
                                </a>
                            </li>
                            <li class="dissmis-employee-outside">
                                <a class="btn2 btn-app">
                                    <i class="fa fa-ban"></i> Desvincular
                                </a>
                            </li>
                            break;

                        case "Prospectos a empleado":
                            <li class="NewEmpleyee">
                                <a class="btn2 btn-app">
                                    <i class="fa fa-plus-square-o"></i>
                                    Nuevo
                                </a>
                            </li>
                            <li class="EditEmployee">
                                <a class="btn2 btn-app">
                                    <i class="fa fa-edit "></i>
                                    Editar
                                </a>
                            </li>
                            <li>
                                <a class="btn2 btn-app">
                                    <i class="fa fa-trash"></i>
                                    <input type="submit" value="Eliminar" form="deleteEmployees" class="inputTypesubmit" />
                                </a>
                            </li>
                            <li class="li-separador">
                                <a class="btn2 btn-app">
                                </a>
                            </li>
                            <li class="hire-employee-outside">
                                <a class="btn2 btn-app">
                                    @*<i class="fa fa-ban"></i> Contratar*@
                                    <i class="fa fa-check-square"></i> Contratar
                                </a>
                            </li>
                            break;

                        case "Dados de baja":
                            <li class="EditEmployee">
                                <a class="btn2 btn-app">
                                    <i class="fa fa-edit "></i>
                                    Ver
                                </a>
                            </li>
                            <li class="li-separador">
                                <a class="btn2 btn-app">
                                </a>
                            </li>
                            <li class="hire-dissmis-outside">
                                <a class="btn2 btn-app">
                                    <i class="fa fa-check-square"></i> Contratar
                                </a>
                            </li>
                            <li class="employee-history">
                                <a class="btn2 btn-app">
                                    <i class="fa fa-user"></i>
                                    Historial del empleado
                                </a>
                            </li>
                            break;
                    }


                }
            </ul>

            <ul class="menuoptions">
                <li class="OpcActualizar">
                    <a class="btn2 btn-app ">
                        <i class="fa fa-repeat"></i>
                    </a>
                </li>
                <li class="CerrarModulo">
                    <a class="btn2 btn-app">
                        <i class="fa fa-close i-close"></i>
                    </a>
                </li>
            </ul>

            @* Sección del formulario contratar *@
            <div class="contenedor-uno-contratar collapse" style="position: absolute"></div>
            <div class="contenedor-desvinculados-contratar collapse" style="position: absolute"></div>
        </div>
    </div>

    <!-- tabla empleados activos -->
    <div class="ContenedorListEntity custonContainer">
        <h3 class="TituloEstandar title-for-pagination">@ViewBag.typeEmployee</h3>

        <div class="contenPretabla">
            <div class="form-group-BuscadorDepartment" style="display:flex; align-items:center; justify-content:space-between; flex-wrap:wrap; gap:10px;">
                <div style="display:flex; align-items:center; gap:10px;">
                    @{
                        switch (ViewBag.typeEmployee)
                        {
                            case "Empleados":
                                <!-- filtro-->
                                await Html.RenderPartialAsync("ViewFilterEmployee");
                                break;

                            case "Prospectos a empleado":
                                <!-- filtro-->
                                await Html.RenderPartialAsync("ViewFilterEmployee_Prospect");
                                break;

                            case "Dados de baja":
                                <!-- filtro-->
                                await Html.RenderPartialAsync("ViewFilter");
                                break;

                        }
                    }
                </div>

                @* Controles de vistas de usuario *@
                <div class="grid-views-inline" style="display:flex; align-items:center; gap:8px; margin-right:29px;">
                    <button class="btn btn-sm" id="btn-save-view-changes" title="Guardar cambios en la vista" style="display:none; padding:5px 12px; background:#337ab7; color:#fff; border:1px solid #337ab7;">
                        <i class="fa fa-save" style="font-size:14px;"></i>
                    </button>
                    <button class="btn btn-default btn-sm" id="btn-manage-columns" title="Gestionar columnas" style="padding:5px 12px; background:#fff; border:1px solid #ccc;">
                        <i class="fa fa-columns" style="font-size:14px;"></i>
                    </button>
                    <div class="dropdown dropdown-views-widget">
                        <button class="btn btn-default btn-sm dropdown-toggle" type="button" data-toggle="dropdown" style="padding:5px 12px; background:#fff; border:1px solid #ccc;">
                            <i class="fa fa-eye" style="font-size:14px;"></i>
                            <span id="current-view-name" style="font-size:13px; margin:0 5px;">Vista por defecto</span>
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu" style="padding:5px 0; border:1px solid #ccc; border-radius:0; box-shadow:none;">
                            <li><a href="#" data-view="default">Vista por defecto</a></li>
                            <li role="separator" class="divider"></li>
                            <li class="dropdown-header">Vistas Guardadas</li>
                            <li id="saved-views-container"><span class="text-muted-views">Sin vistas guardadas</span></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="#" id="btn-new-view">Nueva Vista</a></li>
                        </ul>
                    </div>
                    <style>
                        .dropdown-views-widget { position: relative; }
                        .dropdown-views-widget .dropdown-menu { min-width: calc(100% - 4px); width: calc(100% - 4px); left: 0; right: auto; }
                        .dropdown-views-widget .dropdown-menu > li > a { padding: 5px 15px; font-size: 13px; color: #333; white-space: nowrap; background-color: #fff; }
                        .dropdown-views-widget .dropdown-menu > li > a:hover,
                        .dropdown-views-widget .dropdown-menu > li > a:focus,
                        .dropdown-views-widget ul.dropdown-menu li a:hover { background: #337ab7 !important; background-color: #337ab7 !important; color: #fff !important; }
                        .dropdown-views-widget .dropdown-menu .divider { margin: 5px 0; }
                        .dropdown-views-widget .dropdown-menu .dropdown-header { padding: 5px 15px; font-size: 12px; color: #777; white-space: nowrap; }
                        .dropdown-views-widget .text-muted-views { padding: 5px 15px; display: block; font-size: 12px; color: #999; white-space: nowrap; }
                        .dropdown-views-widget #saved-views-container .saved-view-item { font-size: 13px; }
                        .dropdown-views-widget #saved-views-container .saved-view-item:hover { background: #f5f5f5; }
                        .dropdown-views-widget #saved-views-container .saved-view-item a:hover { color: #337ab7; }
                        .dropdown-views-widget #saved-views-container .btn-set-default:hover { color: #f0ad4e !important; }
                    </style>
                </div>

            </div>
        </div>
        <div class="scrollbar-TablePrimari">

            <div class="container-table-app" id="content-scroll">
                <table class="table-app tblEmpleyee" id="MainTable">
                    <thead>
                        <tr class="row-header-app">
                            <td class="cell-app check-cell-app cell-header-app">
                                <input id="check-table-0" type="checkbox" class="check-table-app">
                                <label for="check-table-0"> </label>
                            </td>
                            <td class="cell-app  cell-header-app">Número de personal</td>
                            <td class="cell-app  cell-header-app">Nombre</td>
                            <td class="cell-app  cell-header-app">Apellido</td>
                            @if (ViewBag.typeEmployee == "Dados de baja")
                            {
                                <td class="cell-app  cell-header-app">Motivo</td>

                            }
                            else
                            {
                                <td class="cell-app  cell-header-app">Tipo de empleado</td>

                            }
                            <td class="cell-app  cell-header-app">Fecha de ingreso</td>
                            <td class="cell-app  cell-header-app">Edad</td>
                        </tr>
                    </thead>
                    <tbody class="tbody-Table-Employee">
                        @{int indexCheck = 1; }
                        @foreach (var item in Model)
                        {

                            string idCheck = $"check-table-{indexCheck++}";
                        <tr class="row-app">

                            <td class="cell-app check-cell-app">
                                <input id="@idCheck" type="checkbox" class="check-table-app selectEmployees">
                                <label for="@idCheck" class="label-cell"></label>
                            </td>
                            <td class="cell-app cell-principal EmployeeIdtbl" data-title="Número de personal">
                                @Html.DisplayFor(modelItem => item.EmployeeId)
                            </td>
                            <td class="cell-app Nametbl" data-title="Nombre">
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td class="cell-app LastNametbl" data-title="Apellido">
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>

                            @if (ViewBag.typeEmployee == "Dados de baja")
                            {
                                <td class="cell-app EmployeeTypetbl" data-title="Motivo">
                                    @Html.DisplayFor(modelItem => item.EmployeeAction)
                                </td>
                            }
                            else
                            {
                                <td class="cell-app EmployeeTypetbl" data-title="Motivo">
                                    @Html.DisplayFor(modelItem => item.EmployeeType)
                                </td>
                            }

                            <td class="cell-app AdmissionDatetbl" data-title="Fecha de ingreso">
                                @Convert.ToDateTime(item.AdmissionDate).ToString("d", CultureInfo.CreateSpecificCulture(ViewBag.Culture))
                            </td>
                            <td class="cell-app Agetbl" data-title="Edad">
                                @Html.DisplayFor(modelItem => item.Age)
                            </td>

                        </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>

    </div>

    <!-- nuevo empleado -->
    @{await Html.RenderPartialAsync("NewAndEditEmployee", new DC365_WebNR.CORE.Domain.Models.Employee());}

    <!-- nueva direccion de empleado-->
    @{await Html.RenderPartialAsync("ModalEmployeeAddress");}

    <!--información de contacto-->
    @{await Html.RenderPartialAsync("ModalEmployeeContacts");}

    <!--cuentas bancarias-->
    @{await Html.RenderPartialAsync("ModalEmployeeBankAccount");}

    <!-- codigos de ganancias-->
    @{await Html.RenderPartialAsync("ModalEmployeeEarning");}

    <!-- codigos de deducciones-->
    @{await Html.RenderPartialAsync("ModalEmployeeDeductionCode");}

    <!-- puestos de empleados-->
    @{await Html.RenderPartialAsync("ModalEmployeePosition");}

    <!-- documentos de empleados-->
    @{await Html.RenderPartialAsync("ModalEmployeeDocument");}

    <!-- prestamos de empleados-->
    @{await Html.RenderPartialAsync("ModalEmployeeLoan");}

    <!-- impuestos de empleados-->
    @{await Html.RenderPartialAsync("ModalEmployeeTax");}
    
    <!-- Horario de empleado-->
    @{
        await Html.RenderPartialAsync("ModalEmployeeWorkCalendars");
    }

    <!-- horas extras de empleados-->
    @{await Html.RenderPartialAsync("ModalEmployeeExtraHour.cshtml", (List<SelectListItem>)ViewBag.FilterExtraHours);}
    
    <!-- Asistencia de empleado-->
    @{
        await Html.RenderPartialAsync("ModalEmployeeAssist.cshtml", (List<SelectListItem>)ViewBag.FilterExtraHours);
    }

    <!-- eliminar-->
    <form asp-action="delete" class="deleteEmployees collapse" id="deleteEmployees">
    </form>

    <!-- Deshabilitar-->
    <form asp-action="updateStatus" class="collapse" id="form-EmployeeStatus">
        <input id="idEmployeeDesh" name="idEmployeeDesh" class="form-control" />
    </form>

    <!-- Modal para guardar vista -->
    <div class="modal fade" id="modal-save-view" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document" style="width:400px; max-width:90%; margin:60px auto;">
            <div class="modal-content">
                <div class="modal-header" style="background:#337ab7; padding:10px 15px; display:flex; justify-content:space-between; align-items:center;">
                    <h4 class="modal-title" style="color:white; font-size:18px; font-weight:400; margin:0;">Nueva Vista</h4>
                    <button type="button" class="close" data-dismiss="modal" style="color:white; opacity:1; font-size:24px; margin:0; padding:0;">
                        <span>&times;</span>
                    </button>
                </div>
                <div class="modal-body" style="padding:15px;">
                    <div class="form-group">
                        <label for="view-name" style="font-size:14px; font-weight:500;">Nombre de la vista</label>
                        <input type="text" class="form-control" id="view-name" placeholder="Ingrese nombre..." style="font-size:14px;">
                    </div>
                    <div class="checkbox">
                        <label style="font-size:14px;">
                            <input type="checkbox" id="view-is-default"> Vista por defecto
                        </label>
                    </div>
                    <div class="checkbox">
                        <label style="font-size:14px;">
                            <input type="checkbox" id="view-is-public"> Vista pública
                        </label>
                    </div>
                </div>
                <div class="modal-footer" style="padding:10px 15px; border-top:1px solid #e5e5e5;">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-primary" id="btn-confirm-save-view">Guardar</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal para gestionar columnas -->
    <div class="modal fade" id="modal-manage-columns" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
                    <h4 class="modal-title">Gestionar Columnas</h4>
                </div>
                <div class="modal-body">
                    <p class="text-muted">Seleccione las columnas que desea mostrar. Arrastre para reordenar:</p>
                    <div id="columns-list" class="columns-list-container"></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-primary" id="btn-apply-columns">Aplicar</button>
                </div>
            </div>
        </div>
    </div>

</div>
<script src="~/js/grid-columns-manager.js?@version"></script>
<script src="~/js/grid-views-manager.js?@version"></script>
<script src="~/js/M_Employee-views.js?@version"></script>
@section Scripts {
    <script src="~/js/Employees/Employee.js"></script>
    <script src="~/js/Employees/AddresEmployees.js"></script>
    <script src="~/js/Employees/ContactsInfoEmployee.js" type="module"></script>
    <script src="~/js/Employees/BankAccountEmployee.js" type="module"></script>
    <script src="~/js/Helps.js"></script>
    <script src="~/js/Employees/EarningCodeEmployee.js" type="module"></script>
    <script src="~/js/Employees/DeductionCodeEmployee.js" type="module"></script>
    <script src="~/js/Employees/PositionEmployee.js" type="module"></script>
    <script src="~/js/Employees/DocumentEmployee.js" type="module"></script>
    <script src="~/js/Employees/LoanEmploye.js" type="module"></script>
    <script src="~/js/Employees/EmployeeTax.js" type="module"></script>
    <script src="~/js/Employees/WorkCalendarEmployee.js" type="module"></script>
    <script src="~/js/AppInputDate.js"></script>
    <script src="~/js/Employees/EmployeeExtraHour.js" type="module"></script>
    <script src="~/js/Employees/EmployeeAssist.js" type="module"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

