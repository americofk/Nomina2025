@{
    bool typeview = (bool)ViewBag.typeView;
}
<!-- nueva direccion de empleado-->
<div class="modal modNewAddress" tabindex="-1" role="dialog" aria-hidden="true">

    <div class="ContenModModule">
        <div class="modal-content">
            <!--Opciones del Formulario-->
            <div class="modal-options">
                <div class="menuoptions-flex-submodal">
                    <ul class="menuoptions">

                        @{
                            if (typeview)
                            {
                                <li class="NewAddress">
                                    <a class="btn2 btn-app">
                                        <i class="fa fa-plus-square-o"></i> Nuevo
                                    </a>
                                </li>
                                <li>
                                    <a class="btn2 btn-app">
                                        <i class="fa fa-trash"></i>
                                        <input type="submit" value="Eliminar" form="DeleteAddress" class="inputTypesubmit" />
                                    </a>
                                </li>
                            }
                        }


                    </ul>

                    <ul class="menuoptions">
                        <li class="close-modal-cerrarModAddres">
                            <a class="btn2 btn-app">
                                <i class="fa fa-close i-close"></i>
                            </a>
                        </li>
                    </ul>
                </div>

                <div class="container-modal-scrolling">
                    <!--formulario nueva direccion-->
                    <div class="cont-form-newandedit contformnewaddres collapse">
                    </div>

                    <h3 class="TituloEstandar">Direcciones del empleado</h3>
                    <div class="scrollbar-tableprimary-submodal">
                        <div class="container-table-app dataTableAddress" id="content-scroll">

                        </div>
                    </div>

                    <form asp-action="delete" class="DeleteAddress collapse" id="DeleteAddress">
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>