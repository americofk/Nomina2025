@model DC365_WebNR.CORE.Domain.Models.Department

@* Opciones de vista parcial *@
<div class="opcioneslistpageForm collapse">
    <div class="menuoptions-flex">
        <ul class="menuoptions">
            <li class="btnSaveAndClose">
                <a class="btn2 btn-app">
                    <i class="fa fa-check-square-o"></i>
                    Guardar y Cerrar
                </a>
            </li>
            <li class="btnSaveOnly">
                <a class="btn2 btn-app">
                    <i class="fa fa-save"></i>
                    Guardar
                </a>
            </li>
        </ul>

        <ul class="menuoptions">
            <li class="AuditInfoForm Showid collapse">
                <a class="btn2 btn-app" title="Información de auditoría">
                    <i class="fa fa-info-circle"></i>
                </a>
            </li>
            <li class="OpCloseform">
                <a class="btn2 btn-app ">
                    <i class="fa fa-close i-close"></i>
                </a>
            </li>
        </ul>
    </div>
</div>


<!-- nuevo departamento -->
<div class="collapse contNewEntyti">
    <input type="text" class="form-control codigoDeparment" style="display:none">
    <div class="col-md-12 col-sm-12 col-xs-12 margenFormmularios ContenedorFormularios2">
        <div class="x_panel">
            <div class="x_content">
                <h3 class="TituloFormularios">Nuevo departamento</h3>
                <form class="contenidoNuevoGasto2" role="tabpanel" data-example-id="togglable-tabs" id="createAndEditDepartment" asp-action="save">

                            @* Campos ocultos de auditoría *@
                            <input type="hidden" asp-for="DataAreaId" />
                            <input type="hidden" asp-for="RecId" />
                            <input type="hidden" asp-for="CreatedBy" />
                            <input type="hidden" asp-for="CreatedOn" />
                            <input type="hidden" asp-for="ModifiedBy" />
                            <input type="hidden" asp-for="ModifiedOn" />
                            <input type="hidden" asp-for="IsDeleted" />
                            <input type="hidden" asp-for="DeletedBy" />
                            <input type="hidden" asp-for="DeletedOn" />

                            <div class="contInterNuevoConteGastos">

                        <div class="contlotes Showid collapse">
                            <label class="control-label ancholabel">Código de departamento</label>
                            <div class="anchoimput">
                                <input asp-for="DepartmentId" class="form-control" readonly="readonly" />
                                <span asp-validation-for="DepartmentId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="contlotes">
                            <label class="control-label ancholabel">Nombre del departamento</label>
                            <div class="anchoimput">
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                        </div>

                        <div class="contlotes">
                            <label class="control-label ancholabel">Nº de trabajadores</label>
                            <div class="anchoimput">
                                <input asp-for="QtyWorkers" class="form-control" />
                                <span asp-validation-for="QtyWorkers" class="text-danger"></span>
                            </div>

                        </div>

                        <div class="contlotes">
                            <label class="control-label ancholabel">Cuenta contable</label>
                            <div class="anchoimput">
                                <input asp-for="AccountCode" class="form-control" maxlength="20" placeholder="Ej: 5101-001" />
                                <span asp-validation-for="AccountCode" class="text-danger"></span>
                            </div>
                        </div>

                    </div>
                    <div class="contInterNuevoConteGastos">

                        <div class="contlotes">
                            <label class="control-label ancholabel">Fecha inicial</label>
                            <div class="anchoimput">
                                <div class="app-input-date">
                                    <input asp-for="StartDate" class="form-control"/>
                                    <i class="app-input-date-today fa fa-edit " title="Hoy"></i>
                                    <i class="app-input-date-never fa fa-hourglass-o " title="Nunca"></i>
                                </div>
                                <span asp-validation-for="StartDate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="contlotes">
                            <label class="control-label ancholabel">Fecha final</label>
                            <div class="anchoimput">
                                <div class="app-input-date">
                                    <input asp-for="EndDate" class="form-control" />
                                    <i class="app-input-date-today fa fa-edit " title="Hoy"></i>
                                    <i class="app-input-date-never fa fa-hourglass-o " title="Nunca"></i>
                                </div>
                                <span asp-validation-for="EndDate" class="text-danger"></span>
                            </div>
                        </div>


                        <div class="contlotes">
                            <label class="control-label ancholabel">Comentario</label>
                            <div class="anchoimput">
                                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Máximo 100 caracteres"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>

                    </div>
                </form>

                @* Panel de Información del Registro (Auditoría) *@
                <div id="audit-info-section" style="display: none; margin-top: 20px;">
                    <h3 class="TituloFormularios audit-title-fixed" style="cursor: pointer;" id="audit-panel-header">
                        Información del Registro
                        <i class="fa fa-chevron-down pull-right" id="audit-chevron"></i>
                    </h3>
                    <div id="audit-panel-content" style="display: block; border: 1px solid #e5e5e5; border-radius: 4px; padding: 15px; background-color: #f9f9f9;">
                        @* Información de Auditoría ISO 27001 *@
                        @await Html.PartialAsync("_AuditInfo", Model)
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

