                        {
                            string idCheckCompanies = $"check-table-emp-usu-{indexCheckEmp++}";
                            <tr class="row-app">

                                <td class="cell-app check-cell-app">
                                    <input id="@idCheckCompanies" type="checkbox" class="check-table-app selectOptionCompanies">
                                    <label for="@idCheckCompanies" class="label-cell"></label>
                                </td>
                                <td class="cell-app cell-principal companyIdtbl" data-title="Código">
                                    @Html.DisplayFor(modelItem => item.companyId)
                                </td>
                                <td class="cell-app nametbl" data-title="Nombre">
                                    @Html.DisplayFor(modelItem => item.name)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
