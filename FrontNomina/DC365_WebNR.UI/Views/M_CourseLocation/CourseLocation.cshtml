
@model IEnumerable<DC365_WebNR.CORE.Domain.Models.CourseLocation>

@{
    ViewData["Title"] = "CourseLocation";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string version = $"dt={DateTime.Now.ToString("yyyyMMddhhmmss")}";

}
<link href="~/css/Department.css" rel="stylesheet" />

<div class="contDasboard">
    <input type="hidden" class="Image" />
    <!--Opciones del Formulario-->
    <div class="opcioneslistpage">

        <div class="menuoptions-flex">
            <ul class="menuoptions">
                <li class="NewCourseLocation">
                    <a class="btn2 btn-app">
                        <i class="fa fa-plus-square-o"></i>
                        Nuevo
                    </a>
                </li>

                <li class="EditCourseLocation">
                    <a class="btn2 btn-app">
                        <i class="fa fa-edit "></i>
                        Editar
                    </a>
                </li>

                <li>
                    <a class="btn2 btn-app">
                        <i class="fa fa-trash"></i>
                        <input type="submit" value="Eliminar" form="DeleteCourseLocation" class="inputTypesubmit" />

                    </a>
                </li>
            </ul>

            <ul class="menuoptions">
                <li class="OpcActualizar">
                    <a class="btn2 btn-app">
                        <i class="fa fa-repeat "></i>
                    </a>
                </li>

                <li class="CerrarModulo">
                    <a class="btn2 btn-app ">
                        <i class="fa fa-close i-close"></i>
                    </a>
                </li>
            </ul>
        </div>

    </div>

    <!-- tabla de Course Location -->
    <div class="ContenedorListEntity custonContainer">
        <h3 class="TituloEstandar">Ubicación de cursos</h3>

        <div class="contenPretabla">
            <div class="form-group-BuscadorDepartment">
                <!-- filtro-->
                @{await Html.RenderPartialAsync("ViewFilter");}
                @*<input type="text" class="form-control-Filtro buscador BuscartblCourseLocation" placeholder="Filtro">*@
            </div>
        </div>
        <div class="scrollbar-TablePrimari">

            <div class="container-table-app" id="content-scroll">
                <table class="table-app tblCourseLocation" style="width:150%">
                    <thead>
                        <tr class="row-header-app">
                            <td class="cell-app check-cell-app cell-header-app">
                                <input id="check-table-0" type="checkbox" class="check-table-app">
                                <label for="check-table-0"> </label>
                            </td>
                            <td class="cell-app  cell-header-app">Id Ubicación</td>
                            <td class="cell-app  cell-header-app">Nombre</td>
                            <td class="cell-app  cell-header-app">Teléfono</td>
                            <td class="cell-app  cell-header-app">Email</td>
                            <td class="cell-app  cell-header-app styleRowDescripTwo">Dirección</td>
                            <td class="cell-app  cell-header-app">Nombre del contacto</td>
                        </tr>
                    </thead>
                    <tbody class="tbody-Table-CourseLocation">
                        @{int indexCheck = 1; }
                        @foreach (var item in Model)
                        {

                            string idCheck = $"check-table-{indexCheck++}";
                            <tr class="row-app">

                                <td class="cell-app check-cell-app">
                                    <input id="@idCheck" type="checkbox" class="check-table-app selectCourseLocation">
                                    <label for="@idCheck" class="label-cell"></label>
                                </td>
                                <td class="cell-app cell-principal CourseLocationIdtblcl" data-title="Id Ubicación">
                                    @Html.DisplayFor(modelItem => item.CourseLocationId)
                                </td>
                                <td class="cell-app Nametblcl" data-title="Nombre">
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td class="cell-app Phonetblcl" data-title="Teléfono)">
                                    @Html.DisplayFor(modelItem => item.Phone)
                                </td>

                                <td class="cell-app Mailtblcl" data-title="Email)">
                                    @Html.DisplayFor(modelItem => item.Mail)
                                </td>

                                <td class="cell-app Addresstblcl" data-title="Dirección)">
                                    @Html.DisplayFor(modelItem => item.Address)
                                </td>

                                <td class="cell-app ContactNametblcl" data-title="Nombre del contacto)">
                                    @Html.DisplayFor(modelItem => item.ContactName)
                                </td>

                               


                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>


    <!-- Nuevo y editar -->
    @{await Html.RenderPartialAsync("NewAndEditCourseLocation", new DC365_WebNR.CORE.Domain.Models.CourseLocation());}

    <form asp-action="delete" class="DeleteCourseLocation collapse" id="DeleteCourseLocation">
    </form>

</div>

@section Scripts {
    <script src="~/js/CourseLocation.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}