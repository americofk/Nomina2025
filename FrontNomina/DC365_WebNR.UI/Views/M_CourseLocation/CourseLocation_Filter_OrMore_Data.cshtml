@model IEnumerable<DC365_WebNR.CORE.Domain.Models.CourseLocation>
@{int indexCheck = 1 + ((int)ViewBag.CountPageNumber * 20); }
@foreach (var item in Model)
{

    string idCheck = $"check-table-{indexCheck++}";
    <tr class="row-app">

        <td class="cell-app check-cell-app">
            <input id="@idCheck" type="checkbox" class="check-table-app selectCourseLocation">
            <label for="@idCheck" class="label-cell"></label>
        </td>
        <td class="cell-app cell-principal CourseLocationIdtblcl" data-title="Id Ubicación">
            @Html.DisplayFor(modelItem => item.CourseLocationId)
        </td>
        <td class="cell-app Nametblcl" data-title="Nombre">
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td class="cell-app Phonetblcl" data-title="Teléfono)">
            @Html.DisplayFor(modelItem => item.Phone)
        </td>

        <td class="cell-app Mailtblcl" data-title="Email)">
            @Html.DisplayFor(modelItem => item.Mail)
        </td>

        <td class="cell-app Addresstblcl" data-title="Dirección)">
            @Html.DisplayFor(modelItem => item.Address)
        </td>

        <td class="cell-app ContactNametblcl" data-title="Nombre del contacto)">
            @Html.DisplayFor(modelItem => item.ContactName)
        </td>

        <td class="cell-app Commenttblcl" data-title="Comentarios)">
            @Html.DisplayFor(modelItem => item.Comment)
        </td>


    </tr>
}