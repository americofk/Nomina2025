@*
    Archivo: Login/Index.cshtml
    Proyecto: DC365_WebNR.UI
    Descripcion:
      Vista de inicio de sesion profesional con dos paneles.
      - Panel izquierdo con informacion del sistema
      - Panel derecho con formulario de login
*@
@{
    ViewData["Title"] = "Iniciar Sesion";
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>RH-365 | Iniciar Sesion</title>

    <!-- Bootstrap -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Iconos -->
    <link rel="stylesheet" href="~/css/font-awesome/css/font-awesome.min.css">

    <!-- CSS personalizado -->
    <link href="~/css/Login.css" rel="stylesheet" />
</head>

<body>
    <div class="main">
        <!-- Widget fijo centrado -->
        <div style="
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            display: flex;
            align-items: center;
            justify-content: center;
            width: 100%;
            height: 100vh;">

            <div class="row" style="
                width: 90%;
                max-width: 950px;
                height: 70%;
                background: rgba(255,255,255,0.05);
                border-radius: 12px;
                overflow: hidden;
                box-shadow: 0 0 20px rgba(0,0,0,0.25);
                border: 2px solid #ffffff;">

                <!-- Panel izquierdo -->
                <div class="col-md-6 text-center text-white"
                     style="padding: 60px 40px; display: flex; flex-direction: column; justify-content: center; align-items: center;">
                    <img src="~/Images/Logo_Ancho.png" alt="RH-365"
                         style="width: 260px; margin-bottom: 10px; filter: brightness(0) invert(1);" />
                    <h2 style="font-weight: 100;">Sistema de Nomina y Recursos Humanos</h2>
                    <hr style="width: 60px; border-top: 2px solid #fff; opacity: 0.7; margin: 20px auto;" />
                    <ul style="list-style: none; padding: 0; font-size: 16px; text-align: left; line-height: 2;">
                        <li><i class="fa fa-users"></i> Control de empleados</li>
                        <li><i class="fa fa-money"></i> Procesos de nomina</li>
                        <li><i class="fa fa-bar-chart"></i> Reportes inteligentes</li>
                        <li><i class="fa fa-building"></i> Portal del colaborador</li>
                    </ul>
                </div>

                <!-- Panel derecho -->
                <div class="col-md-6"
                     style="background-color: #fff; display: flex; flex-direction: column; justify-content: center; align-items: center; padding: 50px 40px;">

                    <!-- Contenedor de alertas -->
                    <div id="alertContainer" style="width: 100%; max-width: 300px;"></div>

                    <!-- Icono -->
                    <img src="~/Images/icon.png" alt="Icono RH-365"
                         style="width: 85px; height: auto; margin-top: 20px;" />

                    <!-- Titulo -->
                    <h3 style="margin-bottom: 40px; font-weight: 600; color: #1c2b5a; text-align: center;">
                        Iniciar Sesion
                    </h3>

                    <!-- Formulario -->
                    <form id="loginForm" style="width: 100%; max-width: 300px; margin: auto; text-align: left;">
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            <label for="email" style="font-weight: 500;">Correo electronico</label>
                            <input type="email"
                                   class="form-control"
                                   id="email"
                                   name="correo"
                                   placeholder="usuario@empresa.com"
                                   required
                                   style="height: 38px; border-radius: 6px; font-size: 14px; width: 100%; box-sizing: border-box; border: 1px solid #ced4da;" />
                        </div>

                        <div class="form-group" style="margin-top: 18px;">
                            <label for="password" style="font-weight: 500;">Contrasena</label>
                            <input type="password"
                                   class="form-control"
                                   id="password"
                                   name="Password"
                                   placeholder="********"
                                   required
                                   style="height: 38px; border-radius: 6px; font-size: 14px; width: 100%; box-sizing: border-box; border: 1px solid #ced4da;" />
                        </div>

                        <button type="submit" id="btnSubmit" class="btn btn-primary btn-block"
                                style="margin-top: 30px; background-color: #0264d6; border: none; font-weight: 500; height: 38px; border-radius: 6px; width: 100%;">
                            Ingresar
                        </button>

                        <div style="margin-top: 15px; text-align: center;">
                            <a href="#" id="linkForgotPassword" style="font-size: 13px; color: #1c2b5a;">Olvidaste tu contrasena?</a>
                        </div>
                    </form>

                    <!-- Formulario olvido contrasena (oculto) -->
                    <form id="forgotPasswordForm" style="width: 100%; max-width: 300px; margin: auto; text-align: left; display: none;">
                        @Html.AntiForgeryToken()

                        <h4 style="margin-bottom: 20px; font-weight: 600; color: #1c2b5a; text-align: center;">
                            Recuperar Contrasena
                        </h4>
                        <p style="font-size: 13px; color: #666; margin-bottom: 20px; text-align: center;">
                            Ingresa tu correo y recibiras una contrasena temporal.
                        </p>

                        <div class="form-group">
                            <label for="emailRecover" style="font-weight: 500;">Correo electronico</label>
                            <input type="email"
                                   class="form-control"
                                   id="emailRecover"
                                   name="_email"
                                   placeholder="usuario@empresa.com"
                                   required
                                   style="height: 38px; border-radius: 6px; font-size: 14px; width: 100%; box-sizing: border-box; border: 1px solid #ced4da;" />
                        </div>

                        <button type="submit" id="btnRecover" class="btn btn-primary btn-block"
                                style="margin-top: 20px; background-color: #0264d6; border: none; font-weight: 500; height: 38px; border-radius: 6px; width: 100%;">
                            Enviar
                        </button>

                        <div style="margin-top: 15px; text-align: center;">
                            <a href="#" id="linkBackToLogin" style="font-size: 13px; color: #1c2b5a;">Volver al login</a>
                        </div>
                    </form>

                    <div style="text-align: center; margin-top: 45px; color: #888; font-size: 13px;">
                        <small>Engine by <strong>RH-365</strong></small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/login.js"></script>
</body>
</html>
