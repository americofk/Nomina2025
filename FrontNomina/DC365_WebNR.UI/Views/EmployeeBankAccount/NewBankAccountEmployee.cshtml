@using DC365_WebNR.CORE.Domain.Models.Enums;
@model DC365_WebNR.CORE.Domain.Models.EmployeeBankAccount
@{
    List<SelectListItem> currencies = (List<SelectListItem>)ViewBag.Currencies;
    //string currentCurrency = string.IsNullOrEmpty(Model.Currency) ? "Seleccione..." : Model.Currency;
}

<div class="new-indicator for-employee-bankaccount">

</div>

<div class="newAddresEmp">
    <div class="contenTitleandHistori">
        @{
            if (Model.InternalId == 0)
            {
                <h3 class="TituloForMod titulonuevadireccion">Nueva cuenta bancaria</h3>
            }
            else
            {
                <h3 class="TituloForMod titulonuevadireccion">Editar cuenta bancaria</h3>
            }
        }
    </div>
    <form id="new_bankaccount" asp-action="Save">
        <div class="conten-input-modal">

            <div class="cont-input-newform-col3">
                <div class="contlotesmploye">
                    <label class="control-label labelModEmploye-izq">Tipo</label>
                    <div>
                        <select asp-for="AccountType" class="form-control" asp-items="Html.GetEnumSelectList<AccountType>()">
                        </select>
                        <span asp-validation-for="AccountType" class="text-danger"></span>
                    </div>
                </div>
                <div class="contlotesmploye">
                    <label class="control-label labelModEmploye-izq">Número</label>
                    <div>
                        <input asp-for="AccountNum" class="form-control" />
                        <span asp-validation-for="AccountNum" class="text-danger"></span>
                    </div>
                </div>
               
            </div>


            <div class="cont-input-newform-col3">
                <div class="collapse">
                    <div class="contlotesmploye">
                        <label class="control-label labelModEmployeComen">Id</label>
                        <div>
                            <input asp-for="InternalId" class="form-control" />
                            <span asp-validation-for="InternalId" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="contlotesmploye">
                    <label class="control-label labelModEmployeComen">Moneda</label>
                    <div>
                        @Html.DropDownList("Currency", currencies, "Seleccione...", new { @class = "form-control" })
                        <span asp-validation-for="Currency" class="text-danger"></span>
                    </div>
                </div>
                <div class="contlotesmploye">
                    <label class="control-label labelModEmploye-izq">Banco</label>
                    <div>
                        <input asp-for="BankName" class="form-control" />
                        <span asp-validation-for="BankName" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="collapse">
                    <div>
                        <label class="control-label labelModEmploye">Id</label>
                        <div class="anchoimputEmploye">
                            <input asp-for="EmployeeIdBankAccount" class="form-control" />
                            <span asp-validation-for="EmployeeIdBankAccount" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="cont-input-newform-col3">
                <div class="contlotesmploye">
                    <label class="control-label labelModEmployeComen">Comentario</label>
                    <div>
                        <textarea asp-for="Comment" class="form-control" rows="2"></textarea>
                        <span asp-validation-for="Comment" class="text-danger"></span>
                    </div>
                </div>
                <div class="contlotesmploye-slider">
                    <label class="control-label label-switch">Principal</label>
                    <div>
                        <label class="switch">
                            <input asp-for="IsPrincipal" id="IsPrincipal" />
                            <span class="slider round"></span>
                        </label>
                    </div>
                </div>
            </div>


        </div>

        <div class="contbtnAddres">
            <div class="form-group">
                <input type="submit" class="btn btn-primary" id="btnGuardar" value="Guardar">
            </div>
            <div class="form-group">
                <input type="button" class="btn btn-danger btncancelar_new_bankaccount" id="btncancelar" value="Cancelar">
            </div>
        </div>
    </form>

</div>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>