

@model IEnumerable<DC365_WebNR.CORE.Domain.Models.Instructor>
@{
    ViewData["Title"] = "Instructor";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string version = $"dt={DateTime.Now.ToString("yyyyMMddhhmmss")}";
}
<link href="~/css/Department.css" rel="stylesheet" />

<div class="contDasboard">
    <input type="hidden" class="Image" />
    <!--Opciones del Formulario-->

    <div class="opcioneslistpage">
        <div class="menuoptions-flex">
            <ul class="menuoptions">
                <li class="NewInstructor">
                    <a class="btn2 btn-app">
                        <i class="fa fa-plus-square-o"></i>
                        Nuevo
                    </a>
                </li>

                <li class="EditInstructor">
                    <a class="btn2 btn-app">
                        <i class="fa fa-edit "></i>
                        Editar
                    </a>
                </li>

                <li>
                    <a class="btn2 btn-app">
                        <i class="fa fa-trash"></i>
                        <input type="submit" value="Eliminar" form="DeleteInstructor" class="inputTypesubmit" />
                    </a>
                </li>
            </ul>

            <ul class="menuoptions">
                <li class="OpcActualizar">
                    <a class="btn2 btn-app">
                        <i class="fa fa-repeat "></i>
                    </a>
                </li>

                <li class="CerrarModulo">
                    <a class="btn2 btn-app ">
                        <i class="fa fa-close i-close"></i>
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <!-- tabla de instructor -->
    <div class="ContenedorListEntity custonContainer">
        <h3 class="TituloEstandar">Instructores de cursos</h3>

        <div class="contenPretabla">
            <div class="form-group-BuscadorDepartment">

                <!-- filtro-->
                @{await Html.RenderPartialAsync("ViewFilter");}
            </div>
        </div>
        <div class="scrollbar-TablePrimari">

            <div class="container-table-app" id="content-scroll">
                <table class="table-app tblInstructor">
                    <thead>
                        <tr class="row-header-app">
                            <td class="cell-app check-cell-app cell-header-app">
                                <input id="check-table-0" type="checkbox" class="check-table-app">
                                <label for="check-table-0"> </label>
                            </td>
                            <td class="cell-app  cell-header-app">Código</td>
                            <td class="cell-app  cell-header-app">Nombre</td>
                            <td class="cell-app  cell-header-app">Teléfono</td>
                            <td class="cell-app  cell-header-app">Email</td>
                            <td class="cell-app  cell-header-app">Empresa</td>
                            <td class="cell-app  cell-header-app styleRowDescripTwo">Comentario</td>
                        </tr>
                    </thead>
                    <tbody class="tbody-Table-Instructor">
                        @{int indexCheck = 1; }
                        @foreach (var item in Model)
                        {

                            string idCheck = $"check-table-{indexCheck++}";
                            <tr class="row-app">

                                <td class="cell-app check-cell-app">
                                    <input id="@idCheck" type="checkbox" class="check-table-app selectInstructor">
                                    <label for="@idCheck" class="label-cell"></label>
                                </td>
                                <td class="cell-app cell-principal InstructorIdtblIns" data-title="Código">
                                    @Html.DisplayFor(modelItem => item.InstructorId)
                                </td>
                                <td class="cell-app NametblIns" data-title="Nombre">
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td class="cell-app PhonetblIns" data-title="Teléfono)">
                                    @Html.DisplayFor(modelItem => item.Phone)
                                </td>

                                <td class="cell-app MailtblIns" data-title="Email)">
                                    @Html.DisplayFor(modelItem => item.Mail)
                                </td>

                                <td class="cell-app CompanytblIns" data-title="Empresa)">
                                    @Html.DisplayFor(modelItem => item.Company)
                                </td>

                                <td class="cell-app CommenttblIns" data-title="Comentario)">
                                    @Html.DisplayFor(modelItem => item.Comment)
                                </td>


                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>


    <!-- Nuevo y editar -->
    @{await Html.RenderPartialAsync("NewAndEditInstructor", new DC365_WebNR.CORE.Domain.Models.Instructor());}

    <form asp-action="delete" class="DeleteInstructor collapse" id="DeleteInstructor">
    </form>

</div>
<script src="~/js/Instructor.js"></script>

@section Scripts {

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


