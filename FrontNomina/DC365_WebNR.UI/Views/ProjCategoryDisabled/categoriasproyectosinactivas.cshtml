@model IEnumerable<DC365_WebNR.CORE.Domain.Models.ProjCategory>
@{
    ViewData["Title"] = "categoriasproyectosinactivas";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string version = $"dt={DateTime.Now.ToString("yyyyMMddhhmmss")}";

}

<link href="~/css/Department.css" rel="stylesheet" />

<div class="contDasboard">

    <!--Opciones del Formulario-->
    <div class="opcioneslistpage">
        <div class="menuoptions-flex">
            <ul class="menuoptions">

                <li>
                    <a class="btn2 btn-app">
                        <i class="fa fa-trash"></i>
                        <input type="submit" value="Eliminar" form="delete-ProjectCategory" class="inputTypesubmit" />
                    </a>
                </li>

                <li class="li-separador">
                    <a class="btn2 btn-app" style="border: 1px solid #fff;">

                    </a>
                </li>
                <li class="PorjectCategory">
                    <a class="btn2 btn-app">
                        <i class="fa fa-building"></i>
                        Categorias activas
                    </a>
                </li>
            </ul>
            <ul class="menuoptions">
                <li class="OpcActualizar">
                    <a class="btn2 btn-app">
                        <i class="fa fa-repeat "></i>
                    </a>
                </li>
                <li class="PorjectCategory">
                    <a class="btn2 btn-app ">
                        <i class="fa fa-close i-close"></i>
                    </a>
                </li>
            </ul>
        </div>

    </div>

    <!-- tabla -->
    <div class="ContenedorListEntity custonContainer">
        <h3 class="TituloEstandar">Categorias de proyectos inactivas</h3>

        <div class="contenPretabla">
            <div class="form-group-BuscadorDepartment">

                <!-- filtro-->
                @{await Html.RenderPartialAsync("ViewFilter");}
                <span class="tituloStatusDepartment">Inhabilitar</span>
                <label class="switch clickCheckeditar">
                    <input type="checkbox" id="Enable-ProjectCategory" class="idCheckeditar">
                    <span class="slider round" for="Enable-ProjectCategory"></span>

                </label>
            </div>
        </div>
        <div class="scrollbar-TablePrimari">
            <div class="container-table-app" id="content-scroll">
                <table class="table-app tbl-ProjectCategory" id="MainTable">
                    <thead>
                        <tr class="row-header-app">
                            <td class="cell-app check-cell-app cell-header-app">
                                <input id="check-table-0" type="checkbox" class="check-table-app">
                                <label for="check-table-0"> </label>
                            </td>
                            <td class="cell-app  cell-header-app">ID Categoría</td>
                            <td class="cell-app  cell-header-app">Nombre de la categoría</td>
                            <td class="cell-app  cell-header-app">Cuenta contable</td>

                        </tr>
                    </thead>
                    <tbody class="tbody-Table-ProjectCategory-Disabled">
                        @{int indexCheck = 1; }
                        @foreach (var item in Model)
                        {

                            string idCheck = $"check-table-{indexCheck++}";
                            <tr class="row-app">

                                <td class="cell-app check-cell-app">
                                    <input id="@idCheck" type="checkbox" class="check-table-app select-ProjectCategory">
                                    <label for="@idCheck" class="label-cell"></label>
                                </td>
                                <td class="cell-app cell-principal ProjCategoryIdtbl" data-title="ID Categoría">
                                    @Html.DisplayFor(modelItem => item.ProjCategoryId)
                                </td>
                                <td class="cell-app Nametbl" data-title="Nombre de la categoría">
                                    @Html.DisplayFor(modelItem => item.CategoryName)
                                </td>
                                <td class="cell-app LedgerAccounttbl" data-title="Cuenta contable">
                                    @Html.DisplayFor(modelItem => item.LedgerAccount)
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>


        </div>
    </div>

    
    <!-- Eliminar -->
    <form asp-action="delete" class="delete-ProjectCategory collapse" id="delete-ProjectCategory">
    </form>

    <!-- Deshabilitar -->
    <form asp-action="updateStatus" class="updateStatus-ProjectCategory collapse" id="updateStatus-ProjectCategory">
    </form>

</div>

<script src="~/js/M_Department.js?@version" type="module"></script>
<script src="~/js/ProjCategoryDisabled.js" type="module"></script>

@section Scripts {

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


