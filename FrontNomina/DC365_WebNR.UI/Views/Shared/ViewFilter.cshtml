@{
    List<SelectListItem> filters = (List<SelectListItem>)ViewBag.Filter;
}
<div class="contenedor-filtros">
    @* Dropdown oculto para mantener compatibilidad con código existente *@
    @Html.DropDownList("Filter", filters, new { @class = "form-control-option-filtre optionFilter", style = "display:none;" })
    <input type="text" class="form-control-text-filtre buscador textFilterMask" placeholder="Buscar en todas las columnas...">
    <input type="text" class="textFilter" hidden>
</div>