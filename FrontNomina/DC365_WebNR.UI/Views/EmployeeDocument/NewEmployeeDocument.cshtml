@model DC365_WebNR.CORE.Domain.Models.EmployeeDocument
@using DC365_WebNR.CORE.Domain.Models.Enums


<div class="new-indicator for-employee-contactinfo">

</div>

<div class="new-document-Emp">
    <div class="contenTitleandHistori">
        @{
            if (Model.InternalId == 0)
            {
                <h3 class="TituloForMod titulonuevadireccion">Nuevo documento</h3>
            }
            else
            {
                <h3 class="TituloForMod titulonuevadireccion">Editar documento</h3>
            }
        }
    </div>
    <form id="new_EmployeeDocument" asp-action="Save">
        <div class="conten-input-modal">


            <div class="cont-input-newform-col2">
                <div class="contlotesmploye">
                    <label class="control-label labelModEmploye-izq lblInfoContact">Tipo</label>
                    <div>
                        <select asp-for="DocumentType" class="form-control" asp-items="Html.GetEnumSelectList<DocumentType>()">
                        </select>
                        <span asp-validation-for="DocumentType" class="text-danger"></span>
                    </div>
                </div>

                <div class="contlotesmploye">
                    <label class="control-label labelModEmployeComen">Comentario</label>
                    <div>
                        <textarea asp-for="Comment" class="form-control" rows="2"></textarea>
                        <span asp-validation-for="Comment" class="text-danger"></span>
                    </div>
                </div>

            </div>


            <div class="cont-input-newform-col2">
                <div class="contlotesmploye">
                    <label class="control-label labelModEmployeComen">Vence</label>
                    <div>
                        <div class="app-input-date">
                            <input asp-for="DueDate" class="form-control" />
                            <i class="app-input-date-today fa fa-edit " title="Hoy"></i>
                            <i class="app-input-date-never fa fa-hourglass-o " title="Nunca"></i>
                        </div>
                        <span asp-validation-for="DueDate" class="text-danger"></span>

                    </div>
                </div>
                <div class="contlotesmploye">
                    <label class="control-label labelModEmploye-izq lblInfoContact">Número</label>
                    <div>
                        <input asp-for="DocumentNumber" class="form-control" />
                        <span asp-validation-for="DocumentNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="contlotesmploye-slider">
                    <label class="control-label label-switch">Principal</label>
                    <div>
                        <label class="switch">
                            <input asp-for="IsPrincipal" id="IsPrincipal" />
                            <span class="slider round"></span>
                        </label>
                    </div>
                </div>

                <div class="collapse">
                    <div class="contlotesmploye">
                        <label class="control-label labelModEmploye">Id</label>
                        <div>
                            <input asp-for="EmployeeIdDocument" class="form-control" />
                            <span asp-validation-for="EmployeeIdDocument" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="collapse">
                    <div class="contlotesmploye">
                        <label class="control-label labelModEmploye">Id</label>
                        <div>
                            <input asp-for="InternalId" class="form-control" />
                            <span asp-validation-for="InternalId" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <div class="contbtnAddres">
            <div class="form-group">
                <input type="submit" class="btn btn-primary" id="btnGuardar" value="Guardar">
            </div>
            <div class="form-group">
                <input type="button" class="btn btn-danger btncancelar_new_EmployeeDocument" id="btncancelar" value="Cancelar">
            </div>
        </div>
    </form>

</div>

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>



